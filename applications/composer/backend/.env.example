

# Set to "true" (case-insensitive) in production
PRODUCTION=false

# Comma-separated list of allowed domains/IPs
ALLOWED_HOSTS=example.com,www.example.com,api.example.com

# Comma-separated list of trusted origins for CSRF protection
# Use full schemes (https://...)
CSRF_TRUSTED_ORIGINS=https://example.com,https://sub.example.com

SOCIAL_AUTH_ORCID_KEY=your-orcid-client-id
# Only needed as env variable for local; remote deployment uses secret
SOCIAL_AUTH_ORCID_SECRET=your-orcid-client-secret
